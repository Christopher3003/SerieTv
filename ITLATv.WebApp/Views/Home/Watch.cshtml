@using ITLATv.Application.ViewModels.Serie
@model SerieSaveViewModel
@{
    ViewData["Title"] = "Series || Ver";
}

<div class="container mt-5">
    <div class="card-header bg-dark">
        <h2 class="text-center mb-4 text-white">@Model.Name</h2>
    </div>
    

    <div class="card-body">
        <iframe width="100%" height="500" src="@Model.VideoURL"
                title="YouTube video player" frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen>
        </iframe>
    </div>

    <div class="mt-4 d-flex position-relative">
        <a class="btn btn-warning position-absolute start-0 end-0" asp-controller="Home" asp-action="Index">Volver</a>
    </div>
   


</div>
